- content_for :title do
  Mastermind - new game

#notice
  Mastermind

%table
  - # the f is a FormBuilder object
  = form_for :game, {url: mastermind_start_game_path }do |f|
    %tr
      %td= f.label :master, "Master:"
      %td= f.select :master, @game.player_values, {selected: @game.master}, {class: "player"}
    %tr
      %td= f.label :solver, "Codeknacker:"
      %td= f.select :solver,  @game.player_values, {selected: @game.solver}, {class: "player"}
    %tr
      %td= f.label :size_of_code, "Codel√§nge:"
      %td= f.select :size_of_code, @game.color_sizes, {selected: @game.size_of_code}
    %tr
      %td= f.label :num_of_colors, "Anzahl Farben:"
      %td= f.select :num_of_colors, @game.color_sizes, {selected: @game.num_of_colors}
    %tr
      %td
      %td= f.submit "weiter"
