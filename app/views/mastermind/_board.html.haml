- @game.board.guesses.each_with_index do |guess, index|
  .left
    ="#{index+1}. Versuch:"
  .right
    .bank
      - guess.code.each do |color|
        .cell.draggable{style: "background: #{color}", color: color}
      .space
      - guess.num_of_blacks.times do
        .tinycell{style: "background: black"}
      - guess.num_of_whites.times do
        .tinycell{style: "background: white"}
